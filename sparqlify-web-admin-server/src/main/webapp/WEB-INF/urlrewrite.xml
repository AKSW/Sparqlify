	<rule>
		<from>^(.*)/sparql/(.*\.(css|js|png))$</from>
<!-- 		<from>^(.*)/sparql/(.*\..*)$</from> -->
		<to>/resources/snorql/$2</to>
	</rule>
	
</urlrewrite>

